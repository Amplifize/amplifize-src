<%= form_for @feed, :remote => true do |f| %>
    <div class="formField">
	    <%= f.label "Feed URL" %>
	    <%= f.text_field :url, :size => 20 %>
    </div>
    <div class="formField">
    	<%= f.label "Tags" %>
    	<%= f.text_field :tags, :size => 20 %>
    	<p class="instructions">Tags should be comma separated</p>
    </div>
    <%= f.submit :value => "Add feed" %>
<% end %>
