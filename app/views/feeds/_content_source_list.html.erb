<ul id="sourceList">
	<% if "feeds" == view then %>
	<li><a href="/reader/feeds">All sources</a></li>
		<% @my_feeds.each do |feed| %>
	<li><a href="#" onclick="loadSource('feed', <%= feed.id %>);"><%= feed.title %></a></li>
		<% end %>
</ul>

<form method="post" action="/reader/feeds" id="readerSourceForm">
	<input type="hidden" value="" id="readerSourceForm-feed_id" name="feed_id" />
</form>

	<% else %>
	<li><a href="/reader/shares">All conversations</a></li>
	<!-- fill in follows -->
	<li><em>Coming soon</em></li>
</ul>
<form method="post" action="/reader/shares" id="readerSourceForm">
	<input type="hidden" value="" id="readerSourceForm-follows_id" name="follows_id" />
</form>
	<% end %>
