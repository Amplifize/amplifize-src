<!DOCTYPE html>
<html>
<head>
  <title>Amplifize | Give good content a voice</title>
  <%= stylesheet_link_tag "global.css", "reader.css", "reader-overlay.css", "slide-panel/slide_panel.css" %>
  <%= yield :stylesheets %>
  <%= javascript_include_tag :defaults, "jquery.simplemodal.js", "dateFormat.js" %>
  <%= yield :javascripts %>
  <%= csrf_meta_tag %>
</head>
<body>
	<div id="container">
	    <header>
	    	<h1>amplifize</h1>
	    	<h3>Give good content a voice</h3>    	
	        <div style="clear:both"></div>
	    </header>
	
		<!--<p id="notice"><%= notice %></p> -->
		<div id="navigation">
			<ul class="topnav">
				<li><a href="/reader">Feeds</a></li>
				<li><a href="/reader/shares">Shares</a></li>
				<li><a href="/reader/people" onclick="loadPeople();">People</a></li>
				<li><a href="/reader/account" onclick="loadAccount();">Account</a></li>
				<div style="clear: both;"></div>
			</ul>
	    </div>
	    <div id="reader_content">
		    <%= yield %>
		    <div style="clear:both"></div>
	    </div>
	
		<div id="footer">
			<%= link_to "About Amplifize", :about %>
			<%= link_to "Contact Us", :contact %>
			<%= link_to "Terms & Conditions", :terms %>
			<span class="copyright">Built by Big Fish, Big Pond Inc. &copy; 2011</span>
			<div style="clear:both"></div>
		</div>
	</div>
	<script type="text/javascript">
  		var uvOptions = {};
