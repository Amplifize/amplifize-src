<!DOCTYPE html>
<html>
<head>
  <title>Amplifize | Give good content a voice</title>
  <%= stylesheet_link_tag "global.css", "reader.css", "reader-overlay.css", "slide-panel/slide_panel.css" %>
  <%= yield :stylesheets %>
  <%= javascript_include_tag :defaults, "reader.js", "jquery.simplemodal.js", "dateFormat.js" %>
  <%= yield :javascripts %>
  <%= csrf_meta_tag %>
</head>
<body>
	<div id="container">
	    <header>
	    	<h1>amplifize</h1>	
	        <div style="clear:both"></div>
	    </header>
		<!--<p id="notice"><%= notice %></p> -->
	    <div id="reader_content">
  			<div id="navigation">
  				<ul class="drawers">
					<li id="feedsNav" class="drawer">
						<a href="/reader">Feeds</a>
						<span id="feedUnreadCount"></span>
						<ul>
							<li><a href="#" id="addFeedLink">Add feed</a></li>
							<li><a href="#" onclick="loadManageFeeds();">Manage feeds</a></li>
							<li><a href="#" id="importFeedLink">Import feeds</a></li>
						</ul>
					</li>
					<!--
					<li class="drawer">
						<a href="/reader/shares">Shares</a>
					</li>
					-->
					<!--
					<li class="drawer">
						<a href="/reader/people">People</a>
					</li>
					-->
					<!--
					<li class="drawer">
						<a href="/reader/account">Account</a>
					</li>
					-->
					<div style="clear: both;"></div>
				</ul>
		    </div>

		    <%= yield %>
		    <div style="clear:both"></div>
	    </div>

		<div id="footer">
			<%= link_to "About Amplifize", :about %>
			<%= link_to "Contact Us", :contact %>
			<%= link_to "Terms & Conditions", :terms %>
			<span class="copyright">Built by Big Fish, Big Pond Inc. &copy; 2011</span>
			<div style="clear:both"></div>
		</div>
		<div style="clear: both;"></div>
	</div>
	<div style="clear: both;"></div>
	<script type="text/javascript">
  		var uvOptions = {};
  		(function() {
    		var uv = document.createElement('script'); uv.type = 'text/javascript'; uv.async = true;
    		uv.src = ('https:' == document.location.protocol ? 'https://' : 'http://') + 'widget.uservoice.com/F73fXEQJeNksQxotASDg.js';
