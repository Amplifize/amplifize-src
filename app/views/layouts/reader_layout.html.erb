<!DOCTYPE html>
<html>
<head>
  <title>Amplifize | Give good content a voice</title>
  <%= stylesheet_link_tag "global.css" %>
  <%= yield :stylesheets %>
  <%= javascript_include_tag :defaults %>
  <%= yield :javascripts %>
  <%= csrf_meta_tag %>
</head>
<body>
    <header>
    	<h1>amplifize</h1>
    	<h3>Give good content a voice</h3>    	
        <div style="clear:both"></div>
    </header>

	<div id="navigation">
		<ul class="topnav">
			<li><a href="#" onclick="loadFeed();">Feeds</a></li>
			<li><a href="#" onclick="loadShares();">Shares</a></li>
			<li><a href="#" onclick="loadPeople();">People</a></li>
			<li><a href="#" onclick="loadAccount();">Account</a></li>
			<div style="clear: both;"></div>
		</ul>
    </div>
    <div id="reader_content">
	    <%= yield %>
	    <div style="clear:both"></div>
    </div>

	<div id="footer">
		<%= link_to "About Amplifize", :about %>
		<%= link_to "Contact Us", :contact %>
		<%= link_to "Terms & Conditions", :terms %>
		<span class="copyright">Built by Big Fish, Big Pond Inc. &copy; 2011</span>
		<div style="clear:both"></div>
	</div>
	<script type="text/javascript">
  		var uvOptions = {};
  		(function() {
    		var uv = document.createElement('script'); uv.type = 'text/javascript'; uv.async = true;
    		uv.src = ('https:' == document.location.protocol ? 'https://' : 'http://') + 'widget.uservoice.com/F73fXEQJeNksQxotASDg.js';
    		var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(uv, s);
  		})();
	</script>
</body>
</html>
