<!DOCTYPE html>
<html>
<head>
  <title>Amplifize | Give good content a voice</title>
  <%= stylesheet_link_tag "bootstrap.css", "global.css", "reader.css" %>
  <%= yield :stylesheets %>
  <%= javascript_include_tag :defaults, "reader.js", "jquery.hotkeys.js", "dateFormat.js", "bootstrap-modal.js" %>
  <%= yield :javascripts %>
  <%= csrf_meta_tag %>
</head>
<body>	    
    <header>
		<div class="navbar">
	    	<ul class="nav">
	    		<li class="active"><h1><a href="/">amplifize</a></h1></li>
	    	</ul>
			<ul class="nav">
				<li><a href="/reader/feeds">Content <span id="feedUnreadCount"></span></a></li>
				<li><a href="/reader/shares">Conversations <span id="shareUnreadCount"></span></a></li>
				<li><a href="/reader/people">People</a></li>
			</ul>
			<ul class="nav pull-right">
				<li><a href="/profile">Account</a></li>
				<li><%= link_to "Logout", :logout %></li>
			</ul>
		</div> 
        <div style="clear:both"></div>
    </header>
	<!--<p id="notice"><%= notice %></p> -->
	<div id="appNav">
		<%= yield :appNav %>
		<div style="clear:both"></div>
	</div>
	    <div id="reader_content">
		    <%= yield %>
		    <div style="clear:both"></div>
	    </div>
		<%= render 'general/footer.html.erb' %>
		<div id="overlay">
		    <div>
		          <p>Loading</p>
		          <%= image_tag "reader/loader.gif" %>
		     </div>
		</div>
</body>
</html>
