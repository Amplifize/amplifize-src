<!DOCTYPE html>
<html>
<head>
  <title>Amplifize | Great conversation goes best with great content</title>
  <%= stylesheet_link_tag "application" %>
  <%= yield :stylesheets %>
  <%= javascript_include_tag "application", "bootstrap-dropdown.js" %>
  <%= yield :javascripts %>
  <%= csrf_meta_tag %>
</head>
<body>
    <header>
		<div class="navbar">
	    	<ul class="nav">
	    		<li class="active"><h1><a href="/">amplifize</a></h1></li>
	    	</ul>
	        <% if current_user %> 
	        <ul class="nav pull-right">
    			<li><%= link_to "Reader", :reader %></li>
    			<li><%= link_to "Logout", :logout %></li>
    		</ul>
    		<% else %>
    		<ul class="nav pull-right">
    			<li><%= link_to "Register", signup_path %></li>
    			<li class="dropdown">
    				<a href="#" class="dropdown-toggle" data-toggle="dropdown">Login<b class="caret"></b></a>
    				<ul class="dropdown-menu">
    					<li>
    						<%= render 'user_sessions/form' %>
    					</li>
    				</ul>
    			</li>
    		<% end %>
    		</ul>
		</div> 
        <div style="clear:both"></div>
    </header>

    <div id="content">
	    <%= yield %>
	    <div style="clear:both"></div>
    </div>

	<%= render 'general/footer.html.erb' %>
</body>
</html>
