<!DOCTYPE html>
<html>
<head>
  <title>Amplifize | Give good content a voice</title>
  <%= stylesheet_link_tag "bootstrap.css", "global.css" %>
  <%= yield :stylesheets %>
  <%= javascript_include_tag :defaults %>
  <%= yield :javascripts %>
  <%= csrf_meta_tag %>
</head>
<body>
    <header>
		<div class="navbar">
	    	<ul class="nav">
	    		<li class="active"><h1><a href="/">amplifize</a></h1></li>
	    		<li class="slogan"><h3>[Give good content a voice]</h3>
	    	</ul>
	        <% if current_user %> 
	        <ul class="nav pull-right">
    			<li><%= link_to "Reader", :reader %></li>
    			<li><%= link_to "Logout", :logout %></li>
    		</ul>
    		<% else %>
    		<ul class="nav pull-right">
    			<li><%= link_to "Register", new_user_path %></li>
    			<li><%= link_to "Login", :login %></li>
    		<% end %>
    		</ul>
		</div> 
        <div style="clear:both"></div>
    </header>

    <div id="content">
	    <%= yield %>
	    <div style="clear:both"></div>
    </div>

	<%= render 'general/footer.html.erb' %>
</body>
</html>
