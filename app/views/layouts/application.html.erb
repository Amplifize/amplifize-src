<!DOCTYPE html>
<html>
<head>
  <title>Amplifize | Give good content a voice</title>
  <%= stylesheet_link_tag "global.css" %>
  <%= yield :stylesheets %>
  <%= javascript_include_tag :defaults %>
  <%= yield :javascripts %>
  <%= csrf_meta_tag %>
</head>
<body>
    <header>
    	<h1><a href="/">amplifize</a></h1>
    	<div id="navigation">
        <% if current_user %> 
        <%= link_to "Reader", :reader %>
        <!--<%= link_to "Account", :account %>-->
        <%= link_to "Logout", :logout %>
        <% else %>
        <!--<%= link_to "Register", new_user_path %>--> 
        <%= link_to "Login", :login %>
        <% end %>
        </div>
        <div style="clear:both"></div>
    </header>

    <div id="content">
	    <%= yield %>
	    <div style="clear:both"></div>
    </div>

	<%= render 'general/footer.html.erb' %>

	<script type="text/javascript">
  		var uvOptions = {};
  		(function() {
    		var uv = document.createElement('script'); uv.type = 'text/javascript'; uv.async = true;
    		uv.src = ('https:' == document.location.protocol ? 'https://' : 'http://') + 'widget.uservoice.com/F73fXEQJeNksQxotASDg.js';
    		var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(uv, s);
  		})();
	</script>
</body>
</html>
