<!DOCTYPE html>
<html>
<head>
  <title>Amplifize | Give good content a voice</title>
  <%= stylesheet_link_tag "bootstrap.css", "global.css" %>
  <%= yield :stylesheets %>
  <%= javascript_include_tag :defaults %>
  <%= yield :javascripts %>
  <%= csrf_meta_tag %>
</head>
<body>
    <header>
		<div class="navbar navbar-fixed-top">
		  <div class="navbar-inner">
		    <div class="container">
		    	<ul class="nav">
		    		<li class="active"><h1><a href="/">amplifize</a></h1></li>
		    	</ul>
		        <% if current_user %> 
		        <ul class="nav pull-right">
        			<li><%= link_to "Reader", :reader %></li>
        			<li><%= link_to "Logout", :logout %></li>
        		</ul>
        		<% else %>
        		<ul class="nav pull-right">
        			<!--<%= link_to "Register", new_user_path %>--> 
        			<li><%= link_to "Login", :login %></li>
        		<% end %>
        		</ul>
		    </div>
		  </div>
		</div> 
        <div style="clear:both"></div>
    </header>

    <div id="content">
	    <%= yield %>
	    <div style="clear:both"></div>
    </div>

	<%= render 'general/footer.html.erb' %>

	<script type="text/javascript">
  		var uvOptions = {};
  		(function() {
    		var uv = document.createElement('script'); uv.type = 'text/javascript'; uv.async = true;
    		uv.src = ('https:' == document.location.protocol ? 'https://' : 'http://') + 'widget.uservoice.com/F73fXEQJeNksQxotASDg.js';
    		var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(uv, s);
  		})();
	</script>
</body>
</html>
