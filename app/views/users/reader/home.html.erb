<% content_for :stylesheets do %>
	<%= stylesheet_link_tag "reader_homepage.css" %>
<% end %>


<div id="contentPreview">
	<h3>Content:</h3>
	<p>Unread content: <%= @posts_unread_count %></p>
	<ul id="readerHomepageContentOptions">
      	<li><a href="#addFeed-modal-content" data-toggle="modal">Add feed</a></li>
      	<li><a href="<%= feeds_manage_url %>">Manage feeds</a></li>
	</ul>
	
</div>
<div id="conversationPreview">
	<h3>Conversations:</h3>
	<p>Unread conversations: <%= @shares_unread_count %></p>
	<ul id="readerHomepageConversationOptions">
		<li><a href="#searchConversations-modal-content" data-toggle="modal">Search conversations</a></li>
		<li><a href="<%= people_url %>">Manage people</a></li>
	</ul>
	
</div>

<div id="addFeed-modal-content" class="modal hide">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal">×</button>
		<h3>Subscribe to a feed by URL</h3>
	</div>
	<div id="modal-body" class="modal-body-style">
		<%= render 'feeds/form' %>
	</div>
</div>

<div id="searchConversations-modal-content" class="modal hide">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal">×</button>
		<h3>Search through old conversations</h3>
	</div>
	<div id="modal-body" class="modal-body-style">
		<%= form_tag(:share_search, method: "post") do %>
			<div class="field">
				<label class="input">
					<span>Search terms</span>
					<%= text_field_tag(:search) %>
				</label>
			</div>
			<div class="actions">
				<%= submit_tag("I'm feeling lucky") %>
			</div>
		<% end %>
	</div>
</div>
