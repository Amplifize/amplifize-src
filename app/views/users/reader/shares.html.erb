		var shares = <%= @shares %>;
		var shares_unread = <%= @shares_unread_count %>;
		var all_follows = <%= @all_follows %>;

		$(document).ready(function() {
			$("#shareUnreadCount").html("<%= @shares_unread_count %>");
			$("#feedUnreadCount").html("<%= @posts_unread_count %>");
