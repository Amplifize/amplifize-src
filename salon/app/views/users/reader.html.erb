<% content_for :stylesheets do %>
	<%= stylesheet_link_tag "reader.css", "reader-overlay.css" %>
<% end %>

<% content_for :javascripts do %>
	<%= javascript_include_tag "reader.js", "jquery.simplemodal.js", "addFeedModal.js", "manageFeedModal.js" %>
<% end %>

<p id="notice"><%= notice %></p>
<ul class="topnav">
	<li>
		<a href="#">Feeds</a>
		<ul class="subnav">
			<li id="addFeedNavItem"><a href="#">Add feed</a></li>
			<li id="manageFeedNavItem"><a href="#">Manage feeds</a></li>
		</ul>
	</li>
	<!--
	<li>  
    	<a href="#">Amplified</a>  
    	<ul class="subnav">
        	<li><a href="#">Invite friends</a></li>
        	<li><a href="#">Manage crowds</a></li>
    	</ul>
	</li>
